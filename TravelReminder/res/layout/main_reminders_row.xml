<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <Switch
        android:id="@+id/reminderOnOffSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reminderSubTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" />
    
	<TextView
	    android:id="@+id/reminderTitle"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_toLeftOf="@id/reminderOnOffSwitch"
	    android:paddingTop="5dp"
	    android:text="Reminder Name"
	    android:textSize="20sp"
	    android:textStyle="bold" />
	
	<TextView
	    android:id="@+id/reminderSubTitle"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/reminderTitle"
	    android:text="Reminder Details"
	    android:textSize="12sp"
	    android:paddingBottom="5dp"
    	android:paddingTop="5dp" />

</RelativeLayout>